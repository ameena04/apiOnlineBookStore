@model OnlineBookStore.Models.AuthorBiography
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<br />
<h2><center><b><u>Edit Author Biography</u></b></center></h2>
<br />
<form asp-action="Edit" asp-controller="AuthorBiography">

   
    @Html.HiddenFor(x => Model.AuthorBiographyId)

    <div class="form-group">
        <label asp-for="DateOfBirth"><b>Date Of Birth</b></label>
        <input type="text" asp-for="DateOfBirth" class="form-control" placeholder="Enter Author's  Date Of Birth">
    </div>

    <div class="form-group">
        <label asp-for="BirthPlace"><b>Birth Place</b></label>
        <input type="text" asp-for="BirthPlace" class="form-control" placeholder="Enter Author's  Birth Place">
    </div>

    <div class="form-group">
        <label asp-for="Nationality"><b>Nationality</b></label>
        <input type="text" asp-for="Nationality" class="form-control" placeholder="Enter Author's  Nationality">
    </div>

    <input type="submit" value="Save" class="btn btn-success" />
    <a asp-controller="AuthorBiography" asp-action="Index" class="btn btn-primary">Back To List</a>
</form>

