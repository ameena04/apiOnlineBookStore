@model IEnumerable<OnlineBookStore.Models.AuthorBiography>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <br />
    <br />
    <br />

    <h2><center><b><u>List Of Author Biographies</u></b></center></h2>
    <br />
    <a asp-action="Create" asp-controller="AuthorBiography" class="btn btn-success">Add Author Biography</a>
    <br />
    <br />
    <table class="table table-striped">

        <thead>
            <tr>
                <th><label for="AuthorBiograpghyId">Author's Biography Id</label></th>
                <th><label for="DateofBirth">Date of Birth</label></th>
                <th><label for="BirthPlace">Birth Place</label></th>
                <th><label for="Nationality">Nationality</label></th>
                <th><label for="Actions">Actions</label></th>


            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.AuthorBiographyId)</td>
                    <td> @Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                    <td> @Html.DisplayFor(modelItem => item.BirthPlace)</td>
                    <td> @Html.DisplayFor(modelItem => item.Nationality)</td>


                    <td>

                        <a asp-controller="AuthorBiography" asp-action="Edit" asp-route-id="@item.AuthorBiographyId" class="btn btn-info">Edit </a> |
                        <a asp-controller="AuthorBiography" asp-action="Details" asp-route-id="@item.AuthorBiographyId" class="btn btn-primary">Details </a> |
                        <a asp-controller="AuthorBiography" asp-action="Delete" asp-route-id="@item.AuthorBiographyId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />

