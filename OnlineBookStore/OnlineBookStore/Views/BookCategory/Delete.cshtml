@model OnlineBookStore.Models.BookCategory
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<h2>Are you sure, you want to delete it?</h2>
<br />
<div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="~/images/logo.png" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><b>Category Id : </b>@Html.DisplayFor(model => model.BookCategoryId)</h5>

                <p class="card-text">  <b> Category Name : </b> @Html.DisplayFor(model => model.CategoryName)</p>
                <p class="card-text"><b> Category Description : </b> @Html.DisplayFor(model => model.CategoryDescription)</p>


            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("Delete", "BookCategory", FormMethod.Post))
{
    <p>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="BookCategory" asp-action="Index" class="btn btn-primary">Back To List</a>
    </p>
}