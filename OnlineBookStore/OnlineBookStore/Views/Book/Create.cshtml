@model OnlineBookStore.Models.Book

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />

<h2><center><b><u>Add Book</u></b></center></h2>
<br />



<form asp-action="Create" asp-controller="Book">

    <div class="form-group">
        <label asp-for="BookName"><b>Book Name</b></label>
        <input type="text" asp-for="BookName" class="form-control" placeholder="Enter Book Name">
    </div>

    <div class="form-group">
        <label asp-for="BookPrice"><b>Book Price</b></label>
        <input type="text" asp-for="BookPrice" class="form-control" placeholder="Enter Book Price">
    </div>
    <div class="form-group">
        <label asp-for="BookImage"><b>Book Image</b></label>
        <input type="text" asp-for="BookImage" class="form-control" placeholder="Upload Book Image">
    </div>

    <p> <b>Book Type</b></p>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="BookType" value="  E-Book" checked>
        <label class="form-check-label" for="BookType">
            E-Book
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="BookType" value="Hard-Copy">
        <label class="form-check-label" for="BookType">
            Hard-Copy
        </label>
    </div>
    <br />

    <label asp-for="Author"><b>Author's Name</b></label>
    @*<input type="text" asp-for="AuthorId" />*@
    <select asp-for="Author" asp-items="ViewBag.authors"></select>
    <br />
    <br />
    <label asp-for="Publication"><b>Publication's Name</b></label>
    @*<input type="text" asp-for="AuthorId" />*@
    <select asp-for="Publication" asp-items="ViewBag.publications"></select>
    <br />
    <br />
    <label asp-for="BookCategory"><b>Book Category</b></label>
    @*<input type="text" asp-for="AuthorId" />*@
    <select asp-for="BookCategory" asp-items="ViewBag.bookcategorys"></select>
    <br />




    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Book" asp-action="Index" class="btn btn-primary">Back To List</a>
</form>
